<?xml version="1.0" encoding="UTF-8"?>
<config>
    
    <modules>
        <Polcode_Helloworld>
            <version>0.1.0</version>
        </Polcode_Helloworld>
    </modules>
    
    <global>
        
        
        <models>
            <helloworld>
                <class>Polcode_Helloworld_Model</class>
            </helloworld>
        </models>
        <helpers>
            <helloworld>
                <class>Polcode_Helloworld_Helper</class>
            </helloworld>
        </helpers>
        <blocks>
            <helloworld>
                <class>Polcode_Helloworld_Block</class>
            </helloworld>
        </blocks>
        
        <resources>
            <helloworld_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </helloworld_read>
            <helloworld_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </helloworld_write>
        </resources>
        
    </global>
    
    <frontend>
        <routers>
            <helloworld>
                <use>standard</use>
                <args>
                    <module>Polcode_Helloworld</module>
                    <frontName>hello</frontName>
                </args>
            </helloworld>
        </routers>
        <layout>
            <updates>
                <helloworld>
                    <file>helloworld.xml</file>
                </helloworld>
            </updates>
        </layout>
    </frontend>
    
</config>
